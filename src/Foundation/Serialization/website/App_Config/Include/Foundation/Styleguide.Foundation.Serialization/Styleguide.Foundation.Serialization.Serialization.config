<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
  <sitecore unicorn:require="On">

    <unicorn>
      <configurations>
        <configuration name="Foundation.Serialization" description="Includes the root tenant folder."  dependencies="Foundation.*" extends="Helix.Foundation">
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">

            <include name="Templates" database="master" path="/sitecore/templates/Project/$(tenantName)">
              <include children="true" />
            </include>

            <include name="Content" database="master" path="/sitecore/content/$(tenantName)">
              <exclude children="true" />
            </include>

            <include name="Themes" database="master" path="/sitecore/media library/Themes/$(tenantName)">
              <exclude children="true" />
            </include>

            <include name="Media" database="master" path="/sitecore/media library/Project/$(tenantName)">
              <exclude children="true">
                <except name="shared" />
              </exclude>
            </include>

            <include name="Forms" database="master" path="/sitecore/Forms/$(tenantName)">
              <exclude children="true" />
            </include>

          </predicate>

        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>