<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="Project.Website.Styleguide" description="Contains all the content items for the Styleguide website" dependencies="Foundation.*,Feature.*,Project.Common,Project.Base" extends="Helix.Base" patch:after="configuration[@name='Project.Base']">
          <predicate>
            <include name="Content.Sitecore.Styleguide" database="master" path="/sitecore/content/$(tenantName)" >
              <exclude childrenOfPath="Styleguide/Media/*" />
            </include>
          </predicate>
          <dataProviderConfiguration enableTransparentSync="false" />
          <syncConfiguration updateLinkDatabase="true" updateSearchIndex="true" />
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>