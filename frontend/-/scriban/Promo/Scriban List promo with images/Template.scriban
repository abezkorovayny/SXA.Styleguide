<h2>{{ i_item.PromoText }}</h2>
<div class="introduction">{{ i_item.PromoText2 }}</div>
{{ if i_item.has_children }}
<div class="row item-list">
{{ for i_child in i_datasource.children }}

<div class="col-md-4 item">
    {{ i_child.PromoIcon }}
        
    <span class="description">
        {{ i_child.PromoText2 }}
    </span> 
    
    {{ sc_field i_child 'PromoLink' [['data-attribute1','value1'],['data-attribute2','value2']] }}
    
</div>


{{ end }}
</div>
{{ end }}